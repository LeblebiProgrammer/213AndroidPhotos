<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTag">

    <Button
        android:id="@+id/btnDeleteTag"
        android:layout_width="380dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="@+id/btEditSaveTag"
        app:layout_constraintStart_toStartOf="@+id/btEditSaveTag"
        app:layout_constraintTop_toBottomOf="@+id/btEditSaveTag" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        android:text="Edit Tag"
        app:layout_constraintStart_toEndOf="@+id/btEditBack"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btEditBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btEditSaveTag"
        android:layout_width="380dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txEditTagValue" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btEditBack" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Value"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <ToggleButton
        android:id="@+id/btEditType"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:layout_marginTop="78dp"
        android:text="ToggleButton"
        android:textOff="Person"
        android:textOn="Location"
        app:layout_constraintEnd_toEndOf="@+id/txEditTagValue"
        app:layout_constraintStart_toStartOf="@+id/txEditTagValue"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txEditTagValue"
        android:layout_width="297dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Value"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btEditType" />
</androidx.constraintlayout.widget.ConstraintLayout>